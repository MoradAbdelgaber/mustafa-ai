  <script>
    let authToken = null;
    let originalReportData = [];

    function initPage(){
      authToken = localStorage.getItem('authToken');
      if(!authToken){
        window.location.href = 'login.html';
        return;
      }
      loadEmployees();
      loadDepartments();

      // تفعيل ميزة البحث داخل الـselect باستخدام مكتبة select2
      $(document).ready(function(){
        $('#employeeSelect').select2({
          width: '150px',
          placeholder: 'اختر موظفًا'
        });
        $('#departmentSelect').select2({
          width: '150px',
          placeholder: 'اختر قسمًا'
        });
        $('#statusSelect').select2({
          width: '130px',
          placeholder: 'كل الحالات'
        });
      });
    }

    async function loadEmployees(){
      const sel = document.getElementById('employeeSelect');
      try {
        const url = 'http://localhost:3500/api/employees?page=1&limit=9999';
        const resp = await fetch(url, {
          headers: { 'Authorization': 'Bearer '+authToken }
        });
        if(!resp.ok) throw new Error('فشل جلب قائمة الموظفين');
        const data = await resp.json();
        const arr = data.data || [];
        arr.forEach(emp=>{
          const opt = document.createElement('option');
          opt.value = emp.enroll_id;
          opt.textContent = emp.name;
          sel.appendChild(opt);
        });
      } catch(err){
        console.error(err);
      }
    }

    async function loadDepartments(){
      const sel = document.getElementById('departmentSelect');
      try {
        const url = 'http://localhost:3500/api/departments';
        const resp = await fetch(url, {
            headers: { 'Authorization': 'Bearer '+authToken }
        });
        if(!resp.ok) throw new Error('فشل جلب قائمة الأقسام');
        const data = await resp.json();
        data.forEach(dept=>{
          const opt = document.createElement('option');
          opt.value = dept._id;
          opt.textContent = dept.department_name;
          sel.appendChild(opt);
        });
      } catch(err){
        console.error(err);
      }
    }

    async function loadReport(){
      const errorMsg = document.getElementById('errorMsg');
      errorMsg.textContent = '';

      const startD = document.getElementById('startDate').value || '2025-01-01';
      const endD   = document.getElementById('endDate').value   || '2025-01-15';
      const empId  = document.getElementById('employeeSelect').value || '0';
      const deptId = document.getElementById('departmentSelect').value || '0';

      let url = 'http://localhost:3500/api/reports/attendance';
      url += `?start_date=${startD}&end_date=${endD}`;
      url += `&employee_id=${empId}`;
      url += `&department_id=${deptId}`;
      url += '&show_official_holidays=1&show_weekly_off_days=1';

      try {
        const resp = await fetch(url, {
            headers: { 'Authorization': 'Bearer '+authToken }
        });
        if(!resp.ok){
          throw new Error('فشل جلب التقرير: ' + resp.status);
        }
        const data = await resp.json();
        originalReportData = data;
        renderReport();
      } catch(err){
        errorMsg.textContent = err.message;
      }
    }

    function renderReport(){
      const statusVal = document.getElementById('statusSelect').value;
      const tableBody = document.querySelector('#reportTable tbody');
      tableBody.innerHTML = '';

      let count = 0;
      let sumDelay = 0;
      let sumEarly = 0;
      let sumNet = 0;

      let summaryRowData = null;

      originalReportData.forEach((row)=>{
        // إن وجدت بيانات تلخص الصفوف (مثال: row.attendance_status==='-- SUMMARY --')
        if(row.attendance_status === '-- SUMMARY --'){
          summaryRowData = row;
          return;
        }
        // فلترة بالحالة
        if(statusVal && row.status_code !== statusVal){
          return;
        }
        count++;
        sumDelay += (row.delay_minutes || 0);
        sumEarly += (row.early_exit_minutes || 0);
        sumNet   += (row.net_salary || 0);

        const tr = document.createElement('tr');
        tr.innerHTML = `
          <td>${count}</td>
          <td>${row.attendance_date || ''}</td>
          <td>${row.employee_name || ''}</td>
          <td>${row.attendance_status || ''}</td>
          <td>${row.check_in || ''}</td>
          <td>${row.check_out || ''}</td>
          <td>${row.delay_minutes || 0}</td>
          <td>${row.early_exit_minutes || 0}</td>
          <td>${row.work_hours || 0}</td>
          <td>${row.net_salary || 0}</td>
        `;
        tableBody.appendChild(tr);
      });

      document.getElementById('recordsCount').textContent = count;
      document.getElementById('delaySum').textContent     = sumDelay;
      document.getElementById('earlySum').textContent     = sumEarly;
      document.getElementById('netSum').textContent       = sumNet.toFixed(2);

      // في حال أردت إضافة صف ملخّص خاص
      if(summaryRowData){
        const trSum = document.createElement('tr');
        trSum.classList.add('summaryRow');
        trSum.innerHTML = `<td colspan="10">${summaryRowData.employee_name||''}</td>`;
        tableBody.appendChild(trSum);
      }
    }

    function logout(){
      localStorage.removeItem('authToken');
      window.location.href = 'login.html';
    }
  </script>
</body>
</html>
