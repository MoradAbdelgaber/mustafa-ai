        <input type="date" id="startDate" value="2025-01-01" />

        <label for="endDate">إلى تاريخ:</label>
        <input type="date" id="endDate" value="2025-01-15" />

        <label for="employeeSelect">الموظف:</label>
        <select id="employeeSelect">
          <option value="0">جميع الموظفين</option>
        </select>

        <label for="departmentSelect">القسم:</label>
        <select id="departmentSelect">
          <option value="0">جميع الأقسام</option>
        </select>

        <label for="statusSelect">الحالة:</label>
        <select id="statusSelect" onchange="renderReport()">
          <option value="">جميع الحالات</option>
          <option value="absent">غائب</option>
          <option value="late">متأخر</option>
          <option value="early_exit">خروج مبكر</option>
          <option value="present">موجود</option>
